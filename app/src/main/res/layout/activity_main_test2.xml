<com.saicmotor.systemui.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:saicmotor="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="800px"
    android:background="@android:color/transparent"
    android:gravity="top"
    saicmotor:umanoPanelHeight="60px"
    saicmotor:umanoShadowHeight="4dp"
    saicmotor:umanoParallaxOffset="50dp"
    saicmotor:umanoDragView="@+id/dragView"
    saicmotor:umanoOverlay="true"
    saicmotor:umanoScrollableView="@+id/list">

    <!-- MAIN CONTENT -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:orientation="vertical">
    </FrameLayout>

    <!-- SLIDING LAYOUT -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="800px"
        android:orientation="vertical"
        android:id="@+id/dragView"
        android:background="@color/systemui_background_color">
        <LinearLayout
            android:layout_marginTop="@dimen/systemui_mainlayout_margin_top"
            android:layout_marginBottom="80px"
            android:id="@+id/linear_one"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginStart="100px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/liner_volume_seekbar"
                android:layout_width="@dimen/systemui_seekbar_background_width"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:background="@drawable/systemui_seekbar_bg"
                android:layout_marginRight="80px">
                <ImageView
                    android:layout_height="94px"
                    android:layout_width="94px"
                    android:id="@+id/seekbar_head_volume_img"
                    android:src="@drawable/icon_voice"
                    android:layout_marginRight="8px"
                    android:layout_gravity="center_vertical"
                    />
                <SeekBar
                    android:id="@+id/progress"
                    android:gravity="center"
                    android:layout_width="392px"
                    android:layout_height="50px"
                    android:layout_toLeftOf="@+id/text1"
                    android:maxHeight="6px"
                    android:minHeight="6px"
                    android:max="200"
                    android:paddingRight="6px"
                    android:layout_gravity="center_vertical"
                    android:progressDrawable="@drawable/seekbar_layer"
                    android:thumb="@drawable/seekbar_ring" />
            </LinearLayout>
            <ImageButton
                android:id="@+id/btn_volume_mute"
                android:layout_width="@dimen/systemui_imagebutton_background_width"
                android:layout_height="@dimen/systemui_imagebutton_background_width"
                android:scaleType="centerInside"
                android:background="@drawable/systemui_imagebutton_background_normal"
                android:src="@drawable/imgbtn_media_mute_selector"
                android:layout_gravity="center"
                android:layout_marginEnd="232px"
                />

            <LinearLayout
                android:id="@+id/linear_layout_mode1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="@dimen/systemui_mode_margin_right"
                android:orientation="vertical">

                <com.saicmotor.systemui.customview.CircleImageview
                    android:layout_width="126px"
                    android:layout_height="126px"
                    android:background="@android:color/transparent"
                    android:src="@drawable/pic_1_m"
                    app:circleBorderHeadWidth="0dp"
                    app:ishaveboder="false"
                    app:ringHeadColor="@color/colorAccent" />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6px"
                    android:layout_width="wrap_content"
                    android:layout_height="28px"
                    android:textSize="16sp"
                    android:gravity="center_horizontal"
                    android:text="狂欢派对模式"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_layout_mode2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="@dimen/systemui_mode_margin_right"
                android:orientation="vertical">
                <com.saicmotor.systemui.customview.CircleImageview
                    android:layout_width="126px"
                    android:layout_height="126px"
                    android:background="@android:color/transparent"
                    app:circleBorderHeadWidth="0dp"
                    app:ringHeadColor="@color/colorAccent"
                    app:ishaveboder ="false"
                    android:src="@drawable/pic_2_m"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6px"
                    android:layout_width="wrap_content"
                    android:layout_height="28px"
                    android:textSize="16sp"
                    android:gravity="center_horizontal"
                    android:text="入睡模式"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_mode3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="@dimen/systemui_mode_margin_right"
                android:orientation="vertical">
                <com.saicmotor.systemui.customview.CircleImageview
                    android:layout_width="126px"
                    android:layout_height="126px"
                    android:background="@android:color/transparent"
                    app:circleBorderHeadWidth="0dp"
                    app:ringHeadColor="@color/colorAccent"
                    app:ishaveboder ="false"
                    android:src="@drawable/pic_3_m"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6px"
                    android:layout_width="wrap_content"
                    android:layout_height="28px"
                    android:gravity="center_horizontal"
                    android:textSize="16sp"
                    android:text="假期赖床模式"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_mode4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="@dimen/systemui_mode_margin_right"
                android:orientation="vertical">
                <com.saicmotor.systemui.customview.CircleImageview
                    android:layout_width="126px"
                    android:layout_height="126px"
                    android:background="@android:color/transparent"
                    app:circleBorderHeadWidth="0dp"
                    app:ringHeadColor="@color/colorAccent"
                    app:ishaveboder ="false"
                    android:src="@drawable/pic_4_m"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6px"
                    android:layout_width="wrap_content"
                    android:layout_height="28px"
                    android:gravity="center_horizontal"
                    android:textSize="16sp"
                    android:text="禅境模式"
                    />
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/screen_brightness_seekbar"/>
        <include layout="@layout/third_line_button_layout"/>
        <FrameLayout
            android:layout_width="180px"
            android:layout_height="10px"
            android:layout_marginTop="76px"
            android:layout_marginStart="870px"
            android:background="@drawable/pulldown_view_bg"
            />

    </LinearLayout>
</com.saicmotor.systemui.slidinguppanel.SlidingUpPanelLayout>
