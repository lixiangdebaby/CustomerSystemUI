<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="100px"
    >
    <LinearLayout
        android:id="@+id/liner_volume_seekbar"
        android:layout_width="@dimen/systemui_seekbar_background_width"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@drawable/systemui_seekbar_bg"
        android:layout_marginRight="80px">
        <ImageView
            android:layout_height="94px"
            android:layout_width="94px"
            android:id="@+id/seekbar_head_volume_img"
            android:src="@drawable/icon_brightness"
            android:layout_marginRight="8px"
            android:layout_gravity="center_vertical"
            />
        <SeekBar
            android:id="@+id/seekbar_brightness_progress"
            android:gravity="center"
            android:layout_width="392px"
            android:layout_height="50px"
            android:layout_toLeftOf="@+id/text1"
            android:maxHeight="6px"
            android:minHeight="6px"
            android:max="200"
            android:paddingRight="6px"
            android:layout_gravity="center_vertical"
            android:progressDrawable="@drawable/seekbar_layer"
            android:thumb="@drawable/seekbar_ring" />
    </LinearLayout>
    <ImageButton
        android:id="@+id/btn_brightness"
        android:layout_width="@dimen/systemui_imagebutton_background_width"
        android:layout_height="@dimen/systemui_imagebutton_background_width"
        android:scaleType="centerInside"
        android:background="@drawable/systemui_imagebutton_background_normal"
        android:src="@drawable/imgbtn_brightness_selector"
        android:layout_gravity="center"
        android:layout_marginEnd="232px"
        />


</LinearLayout>