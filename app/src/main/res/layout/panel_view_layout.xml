<com.saicmotor.systemui.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:saicmotor="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="750px"
    android:background="@android:color/transparent"
    android:gravity="top"
    saicmotor:umanoPanelHeight="@dimen/systeui_panel_sliddown_height"
    saicmotor:umanoShadowHeight="4dp"
    saicmotor:umanoParallaxOffset="50dp"
    saicmotor:umanoDragView="@+id/dragView"
    saicmotor:umanoOverlay="true"
    saicmotor:umanoFadeColor="@android:color/transparent"
    saicmotor:umanoScrollableView="@+id/list">

    <!-- MAIN CONTENT -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:orientation="vertical">
    </FrameLayout>

    <!-- SLIDING LAYOUT -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="750px"
        android:orientation="vertical"
        android:id="@+id/dragView"
        android:background="@color/transparent">
        <include layout="@layout/systemui_layout_line_one"/>
        <include layout="@layout/screen_brightness_seekbar"/>
        <include layout="@layout/third_line_button_layout"/>
        <LinearLayout
                android:id="@+id/linear_sliddown"
                android:layout_width="match_parent"
                android:layout_height="@dimen/systeui_panel_sliddown_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginEnd="0dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="180px"
                    android:layout_height="10px"
                    android:layout_gravity="center"
                    android:background="@drawable/pulldown_view_bg"
                    />
        </LinearLayout>
    </LinearLayout>
</com.saicmotor.systemui.slidinguppanel.SlidingUpPanelLayout>
